# Copy this file to terraform.tfvars and customize as needed
# terraform.tfvars is ignored by .gitignore to prevent accidentally committing sensitive data

# Basic Configuration
resource_group_name = "rg-mms-demo4-state"
location           = "East US"

# Virtual Machine Configuration
vm_name        = "vm-demo4-state"
vm_size        = "Standard_B2s"
admin_username = "azureuser"

# Admin Password for VM Access
# Must be at least 12 characters with uppercase, lowercase, numeric, and special characters
# Example: "MySecurePassword123!"
admin_password = "ChangeMe123!@#"

# Alternative regions you might want to use:
# location = "West US 2"
# location = "East US 2" 
# location = "Central US"

# Alternative VM sizes:
# vm_size = "Standard_B1s"    # Smaller, cheaper
# vm_size = "Standard_B2ms"   # More memory
# vm_size = "Standard_D2s_v3" # More powerful