# Demo 2: Windows VM Deployment - Example Variables  
# Copy this file to terraform.tfvars and customize the values

# Resource group name
resource_group_name = "rg-mms-demo2-vm"

# Azure region
location = "East US"

# Virtual machine name
vm_name = "vm-demo2-web"

# VM size (Standard_B1s for minimal cost, Standard_B2s for better performance)
vm_size = "Standard_B2s"

# Admin username for the VM
admin_username = "azureuser"

# Admin password for the VM (must meet Azure complexity requirements)
# Requirements: 12-123 characters, 3 of 4 character types (uppercase, lowercase, numbers, special chars)
admin_password = "YourSecurePassword123!"